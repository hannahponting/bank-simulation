<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="312.0" prefWidth="445.0" style="-fx-background-color: #A9A9A9;">
      <children>
         <Label layoutX="28.0" layoutY="51.0" prefHeight="30.0" prefWidth="429.0" text="Please select the loan type you wish to apply for" textFill="#435054">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Button fx:id="createLoanButton" layoutX="74.0" layoutY="186.0" mnemonicParsing="false" onAction="#createSelectedLoan" text="Apply" />
         <Label fx:id="statusLabel" layoutX="48.0" layoutY="228.0" prefHeight="30.0" prefWidth="153.0" />
         <RadioButton fx:id="personalLoanRadioButton" layoutX="48.0" layoutY="123.0" mnemonicParsing="false" onAction="#selectPersonalLoan" style="-fx-font-weight: bold;" text="Personal Loan">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
         <RadioButton fx:id="homeLoanRadioButton" layoutX="184.0" layoutY="123.0" mnemonicParsing="false" onAction="#selectHomeLoan" style="-fx-font-weight: bold;" text="Home Loan">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
         <RadioButton fx:id="carLoanRadioButton" layoutX="304.0" layoutY="123.0" mnemonicParsing="false" onAction="#selectCarLoan" style="-fx-font-weight: bold;" text="Car Loan">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
         <Label fx:id="statusLabel" layoutX="46.0" layoutY="227.0" prefHeight="26.0" prefWidth="196.0" textFill="#eb3d08" />
      </children>
   </AnchorPane>
</VBox>
