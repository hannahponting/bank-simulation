<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banksimulation.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="312.0" prefWidth="445.0" style="-fx-background-color: #A9A9A9;">
      <children>
         <Label alignment="TOP_LEFT" layoutX="59.0" layoutY="20.0" prefHeight="17.0" prefWidth="150.0" text="Welcome" textFill="#435054">
            <font>
               <Font size="33.0" />
            </font>
         </Label>
         <Label layoutX="66.0" layoutY="81.0" prefHeight="16.0" prefWidth="70.0" text="Name" />
         <TextField fx:id="userTextField" layoutX="139.0" layoutY="76.0" prefHeight="27.0" prefWidth="153.0" />
          <Button layoutX="230.0" layoutY="176.0" onAction="#onHelloButtonClick" prefHeight="21.0" prefWidth="60.0" text="Login" />
         <Label layoutX="67.0" layoutY="133.0" prefHeight="17.0" prefWidth="63.0" text="Password" />
         <PasswordField fx:id="passwordTextField" layoutX="140.0" layoutY="129.0" prefHeight="27.0" prefWidth="151.0" />

          <Label fx:id="messageLabel" layoutX="72.0" layoutY="212.0" prefHeight="27.0" prefWidth="378.0" textFill="#c72424">
            <font>
               <Font size="13.0" />
            </font>
         </Label>
         <Hyperlink fx:id="registerHyperLink" layoutX="69.0" layoutY="239.0" onAction="#launchCustomerRegistration" text="New Customer Registration" />
         <Button fx:id="saveButton" layoutX="148.0" layoutY="176.0" mnemonicParsing="false" onAction="#writeToCSV" prefHeight="26.0" prefWidth="60.0" text="Save" />
      </children>
   </AnchorPane>
</VBox>
