<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="312.0" prefWidth="445.0" style="-fx-background-color: #A9A9A9;">
      <children>
         <Label layoutX="46.0" layoutY="51.0" text="Please select the account type you wish to create">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <Button fx:id="createAccountButton" layoutX="46.0" layoutY="131.0" mnemonicParsing="false" onAction="#createSelectedAccount" text="Create Account" />
         <Label fx:id="statusLabel" layoutX="46.0" layoutY="170.0" />
         <RadioButton fx:id="currentAccountRadioButton" layoutX="46.0" layoutY="90.0" mnemonicParsing="false" onAction="#selectCurrentAccount" text="Current Account" />
         <RadioButton fx:id="savingsAccountRadioButton" layoutX="173.0" layoutY="90.0" mnemonicParsing="false" onAction="#selectSavingsAccount" text="Savings Account" />
         <RadioButton fx:id="cdAccountRadioButton" layoutX="302.0" layoutY="90.0" mnemonicParsing="false" onAction="#selectCdAccount" text="CD Account" />
      </children>
   </AnchorPane>
</VBox>
